%h1 Listing shows

%table
  %thead
    %tr
      %th Code
      %th Title
      %th Description
      %th Release
      %th
      %th
      %th

  %tbody
    - @shows.each do |show|
      %tr
        %td= show.code
        %td= show.title
        %td= show.description
        %td= show.release
        %td= link_to 'Show', show
        %td= link_to 'Edit', edit_show_path(show)
        %td= link_to 'Destroy', show, :method => :delete, :data => { :confirm => 'Are you sure?' }

