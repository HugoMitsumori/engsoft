= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :login
    = f.text_field :login
  .field
    = f.label "Password"
    = f.text_field :password_digest
  .field
    = f.label :email
    = f.text_field :email

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :birthdate
    = f.date_select :birthdate
  .actions
    = f.submit 'Create', :class => "btn btn-primary"
